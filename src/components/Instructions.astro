---
interface Props {
  instructions: string[];
}

const { instructions } = Astro.props;
---

<div class='instructions'>
  {instructions.map((instruction) => <p set:html={instruction} />)}
</div>

<style>
  .instructions {
    margin-top: 2rem;
    font-size: 1.3rem;
    padding: 1rem;
    background-color: #f8f8f8;
    border-radius: 8px;
    text-align: center;
    max-width: 1024px;
    width: calc(100% - 2rem);
    margin: auto;
    box-sizing: border-box;
  }

  .instructions p {
    margin-bottom: 0.5rem;
    line-height: 1.5;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (max-width: 768px) {
    .instructions p {
      max-width: 100%;
    }
  }
</style>
