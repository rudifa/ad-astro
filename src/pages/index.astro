---
import ShoelaceLayout from '../layouts/ShoelaceLayout.astro';
import CardGrid from '../components/CardGrid.astro';
---

<ShoelaceLayout title='ad-astro'>
  <header>
    <h1>Per aspera ad astro</h1>
  </header>
  <main>
    <CardGrid>
      <sl-card>
        <h2>Web App</h2>
        Minimal layout, with support for Shoelace components.
        <sl-button slot='footer' variant='primary' outline href='./webapp'
          >Demo</sl-button
        >
      </sl-card>
    </CardGrid>
    <CardGrid>
      <sl-card>
        <h2>Family Tree</h2>
        Developing ways to display family tree data.
        <sl-button slot='footer' variant='primary' outline href='./familytree'
          >Demo</sl-button
        >
      </sl-card>
    </CardGrid>
    <CardGrid />
    <CardGrid>
      <sl-card>
        <h2>Demos</h2>
        An example of handling a small collection of components.
        <sl-button slot='footer' variant='primary' outline href='./demos'
          >Demo</sl-button
        >
      </sl-card>
    </CardGrid>
    <CardGrid />
  </main>
</ShoelaceLayout>

<style>
  header,
  main {
    margin: auto;
    width: 1024px;
    padding: 1rem;
    max-width: calc(100% - 2rem);
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: left;
    margin: var(--sl-spacing-4x-large) 0 var(--sl-spacing-3x-large);
  }
</style>
