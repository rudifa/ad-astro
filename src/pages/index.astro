---
import ShoelaceLayout from '../layouts/ShoelaceLayout.astro';
import CardGrid from '../components/CardGrid.astro';
---

<ShoelaceLayout title='ad-astro'>
  <header>
    <h1>ad-astro</h1>
  </header>
  <main>
    <CardGrid>
      <sl-card>
        <h2>Premier jeu</h2>
        Compter de 1 Ã  5 en 10 langues.
        <sl-button
          slot='footer'
          variant='primary'
          outline
          href='./MesJeux'
          class='custom-button'>Joue!</sl-button
        >
      </sl-card>
    </CardGrid>
  </main>
</ShoelaceLayout>

<style>
  header,
  main {
    margin: auto;
    width: 1024px;
    padding: 1rem;
    max-width: calc(100% - 2rem);
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: left;
    margin: var(--sl-spacing-4x-large) 0 var(--sl-spacing-3x-large);
  }
</style>
