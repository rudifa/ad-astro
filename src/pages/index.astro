---
import ShoelaceLayout from '../layouts/ShoelaceLayout.astro';
import CardGrid from '../components/CardGrid.astro';

const showThemeDemo = false; // Set to true to show the Theme Demo card
---

<ShoelaceLayout title='ad-astro'>
  <header>
    <h1>ad-astro</h1>
  </header>
  <main>
    <CardGrid>
      <sl-card>
        <h2>Premier jeu</h2>
        Compter de 1 à 10 en 10 langues.
        <sl-button
          slot='footer'
          variant='primary'
          outline
          href='./MesJeux'
          class=''>Joue!</sl-button
        >
      </sl-card>
    </CardGrid>
    <CardGrid>
      <sl-card>
        <h2>Deuxième jeu</h2>
        Le jeu de Taquin ou Puzzle 15.
        <sl-button
          slot='footer'
          variant='primary'
          outline
          href='./puzzle15'
          class=''>Joue!</sl-button
        >
      </sl-card>
    </CardGrid>
    {
      showThemeDemo && (
        <CardGrid>
          <sl-card>
            <h2>Theme Demo</h2>
            Light / Dark / System
            <sl-button
              slot='footer'
              variant='primary'
              outline
              href='./theme-demo'
              class='custom-button'
            >
              Joue!
            </sl-button>
          </sl-card>
        </CardGrid>
      )
    }
  </main>
</ShoelaceLayout>

<style>
  header,
  main {
    margin: auto;
    width: 1024px;
    padding: 1rem;
    max-width: calc(100% - 2rem);
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: left;
    margin: var(--sl-spacing-4x-large) 0 var(--sl-spacing-3x-large);
  }
</style>
