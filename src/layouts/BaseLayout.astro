---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content="Jeux de recherche et d'apprentissage" />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta name='generator' content={Astro.generator} />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <title>{title}</title>
  </head>
  <body>
    <div class='content-wrapper'>
      <slot />
    </div>
  </body>
</html>

<style is:global>
  :root {
    --content-scale: 1.1; /* Increase this value to make content larger */
  }

  body {
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    min-height: 100vh;
  }

  .content-wrapper {
    width: 100%;
    max-width: calc(1200px * var(--content-scale));
    transform: scale(var(--content-scale));
    transform-origin: top center;
  }
</style>
